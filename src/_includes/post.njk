---
layout: base.njk
---



<article>
  <h1>{{ title }}</h1>

  <p>
    <small>
        {% set d = page.date %}
        {{ d.toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" }) }}
    </small>
    </p>

  {% if tags %}
    <p class="tag-row">
      {% for t in tags %}
        {% if t != "posts" %}
          <a class="tag" href="{{ ('/tags/' ~ t ~ '/') | url }}">{{ t }}</a>
        {% endif %}
      {% endfor %}
    </p>
  {% endif %}

  {{ content | safe }}

 <nav class="post-nav" aria-label="Post navigation">
  {% if prevPost %}
    <a class="post-nav-link" href="{{ prevPost.url | url }}">← Prev</a>
  {% else %}
    <span class="post-nav-spacer"></span>
  {% endif %}

  <a class="post-nav-link" href="{{ '/' | url }}">List</a>

  {% if nextPost %}
    <a class="post-nav-link" href="{{ nextPost.url | url }}">Next →</a>
  {% else %}
    <span class="post-nav-spacer"></span>
  {% endif %}
</nav>





</article>
